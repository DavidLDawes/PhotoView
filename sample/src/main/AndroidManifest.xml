<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.github.DavidLDawes.photoview.sample.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.github.DavidLDawes.photoview.sample.SimpleSampleActivity" />

        <activity android:name="com.github.DavidLDawes.photoview.sample.ViewPagerActivity" />

        <activity android:name="com.github.DavidLDawes.photoview.sample.RotationSampleActivity" />

        <activity android:name="com.github.DavidLDawes.photoview.sample.PicassoSampleActivity" />

        <activity android:name="com.github.DavidLDawes.photoview.sample.CoilSampleActivity" />

        <activity android:name=".ActivityTransitionActivity" />

        <activity android:name="com.github.DavidLDawes.photoview.sample.ActivityTransitionToActivity" />

        <activity android:name="com.github.DavidLDawes.photoview.sample.ImmersiveActivity" />
    </application>

</manifest>
